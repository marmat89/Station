				Arrays.asList(credential));

		DB db = mongoClient.getDB("test");
		
		DateFormat format = new SimpleDateFormat("yyyy-MM-dd'T'HH:mm:ss'Z'", Locale.ENGLISH);
		try {
			db.getCollection("test").insert(
