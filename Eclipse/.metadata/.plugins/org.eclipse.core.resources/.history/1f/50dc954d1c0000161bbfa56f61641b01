package it.unibo.system;

import it.unibo.interfaces.StationRPI;
import it.unibo.util.AssembledList;

import java.util.List;

public abstract class CommunicatorSQL extends Communicator{

	/**
	 * Send measure to DB need to know Sation and his last Update measure list
	 * read all measure and update them to DB
	 * 
	 * @param stat
	 *            Input station for data
	 * @param lastUpdate
	 *            Last measure received from sensor
	 */
	public abstract void sendMes(StationRPI stat, List<AssembledList> lastUpdate);

	/**
	 * Used for update state on DB
	 * 
	 * @param stationID
	 *            Station to update
	 * @param stat
	 *            Actual State of Station
	 */
	public abstract void stationStateUpdate(String stationID, String stat);

	/**
	 * 
	 * Used to update state of sensor on DB
	 * 
	 * @param stationID
	 *            stationID Station for link on DB
	 * @param sensor
	 *            Sensor to update
	 * @param stat
	 *            Actual state of Sensor
	 */
	public abstract void sensorStateUpdate(String stationID, String sensor,
			String stat);

	/**
	 * 
	 * Upload error on DB, with String param we can find correct data error
	 * format
	 * 
	 * @param statID
	 *            Station primary key
	 * @param senName
	 *            Sensor pimary key
	 * @param type
	 *            ErrorType
	 * @param erDesc
	 *            Error Desc
	 */
	public abstract void sendErr(String statID, String senName, String type,
			String erDesc);

	/**
	 * Used for close DB communication
	 */
	public abstract void turnOffConnection();

}